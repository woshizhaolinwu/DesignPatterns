<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_simple_factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单工厂模式"
        />

    <Button
        android:id="@+id/btn_shipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商场促销"/>

    <Button
        android:id="@+id/btn_decorate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="装饰例子"/>

    <Button
        android:id="@+id/btn_proxy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="代理"/>

    <Button
        android:id="@+id/btn_factory_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="工厂方法模式"/>

    <Button
        android:id="@+id/btn_prototype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原型模式"/>

    <Button
        android:id="@+id/btn_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模板模式"/>
    <Button
        android:id="@+id/btn_builder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="建造者模式"/>
    <Button
        android:id="@+id/btn_observer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="观察者模式"/>
    <Button
        android:id="@+id/btn_abstract_factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="抽象工厂模式"/>
    <Button
        android:id="@+id/btn_composite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="组合模式"/>
    <Button
        android:id="@+id/btn_command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="命令模式"/>
    <Button
        android:id="@+id/btn_responsibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="职责链模式"/>
</LinearLayout>
